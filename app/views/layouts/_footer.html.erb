<footer class="footer-container">
    <div class="footer-section">
        <p class="footer-section-title"> Grinnell College Graduate Outcomes Portal</p>
        <div class="footer-section-content">
            <p class="footer-address">Careers Life and Services,<br>
                1103 Park Street,<br>
                Grinnell IA, <br>
                United States
            </p>
        </div>
    </div>

    <div class="footer-section">
        <p class="footer-section-title"> Pages</p>
        <div class="footer-section-content">
            <%= link_to  "Preview", visualizations_path %>
            <%= link_to  "Visualize", new_visualization_path %>
            <%= link_to  "Upload", uploads_path %>
            <% if logged_in? %>
                <%= link_to "Settings", edit_user_path(current_user) %>
                <%= link_to "Approve Emails", valid_emails_path %>
                <%= link_to  "Log Out", logout_path, method: :delete, data: {confirm: "Are you sure you want to log out?"} %>
            <% else %>
                <%= link_to  "Log In", login_path %>
                <%= link_to "Sign Up", signup_path %>
            <% end %>
        </div>

    </div>

    <div class="footer-section">
        <p class="footer-section-title"> Help</p>
        <div class="footer-section-content">
            <%= link_to  "About", '#' %>
            <%= link_to  "Documentation", '#' %>
            <%= link_to  "FAQ", '#' %>
        </div>
    </div>

    <div class="footer-section">
        <p class="footer-section-title"> External Links</p>
        <div class="footer-section-content">
            <%= link_to  "Grinnell Website", 'https://www.grinnell.edu' %>
            <%= link_to  "CLS Page", 'https://www.grinnell.edu/after-grinnell/cls' %>
            <%= link_to  "Handshake", 'https://grinnell.joinhandshake.com/login' %>
        </div>
    </div>

</footer>