<%# Setup %>
<% chart_info = get_chart_info(locals[:id]) %>
<% chart_type = chart_info[:chart_type] %>
<% chart_data = chart_info[:data] %>
<% chart_options = chart_info[:options] %>
<% chart_options[:legend] = false %>
<% chart_options[:download] = false %>
<% chart_options[:title] = "" %>


<%# Plotting %>
<div class="chart-container">

<div class="thumbnail-chart">
    <% case chart_type %>
        <% when 'line_chart'%>
            <%= line_chart chart_data, chart_options %>
        <% when 'pie_chart'%>
            <% chart_options[:legend] = "left" %>
            <%= pie_chart chart_data, chart_options %>
        <% when 'bar_chart'%>
            <%= bar_chart chart_data, chart_options %>
        <% when 'column_chart'%>
            <%= column_chart chart_data, chart_options %>
    <% end %>
</div>
</div>